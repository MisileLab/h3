{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn run build",
    "beforeDevCommand": "yarn run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "qubit",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "removeFile": true,
        "createDir": true,
        "scope": ["$APPDATA", "$APPDATA/data.json", "$APPCACHE", "$APPCACHE/report_snyk.json", "$APPCACHE/report_gitleaks.json"]
      },
      "shell": {
        "execute": true,
        "scope": [{
          "name": "run-gitleaks",
          "cmd": "gitleaks",
          "args": ["detect", "--no-git", "--report-format", "json", "--report-path", {"validator": ".*"}, {"validator": ".*"}, "-v"]
        }, {
          "name": "run-snyk",
          "cmd": "snyk",
          "args": ["code", "test", "-d", {"validator": ".*"}, {"validator": ".*"}]
        }, {
          "name": "run-shell",
          "cmd": "powershell",
          "args": ["/C", "snyk", "code", "test", "-d", {"validator": ".*"}, {"validator": ".*"}]
        }]
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "xyz.misilelaboratory.qubit",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "qubit",
        "width": 800,
        "theme": "Light"
      }
    ]
  }
}
