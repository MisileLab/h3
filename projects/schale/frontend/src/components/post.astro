---
import { DataType } from "./lib";

export interface Props {
  title: string
  description: string
  path: number,
  type?: DataType,
  lang?: string
}
const {title, description, path, type = DataType.blog, lang = "en"} = Astro.props;
---

<a href={type==DataType.news?`/data/${type}/${path}`:`/${lang}/${type}/${path}`}>
  <div class="flex flex-col border-b-2 border-solid border-indigo-600 w-fit h-fit">
    <p class="text-3xl sm:text-4xl md:text-5xl">{title}</p>
    <div class="flex flex-row justify-between w-full h-fit gap-x-2">
      <p class="text-gray text-2xl sm:text-3xl md:text-4xl text-indigo-200">{description}</p>
    </div>
  </div>
</a>
