---
import { DataType } from "./lib";

export interface Props {
  title: string
  description: string
  path: number,
  type?: DataType,
  lang?: string
}
const {title, description, path, type = DataType.blog, lang = "en"} = Astro.props;
---

<a href={type==DataType.news?`/data/${type}/${path}`:`/${lang}/${type}/${path}`} class="block">
  <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 hover:bg-gray-800 transition-colors">
    <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
    <p class="text-gray-400">{description}</p>
  </div>
</a>
