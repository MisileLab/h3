---
import Base from "../../../components/base.astro"
import Post from "../../../components/post.astro"
---

<Base>
  <Fragment slot="head">
    <title>Blog</title>
  </Fragment>
  <!-- Navigation Header -->
  <header class="border-b border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-8">
          <a href="/" class="text-xl font-bold text-white">Misile</a>
          <nav class="hidden md:flex space-x-6">
            <a href="/projects" class="text-gray-300 hover:text-white transition-colors">Projects</a>
            <a href="/en/blog" class="text-white">Blog</a>
            <a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact</a>
          </nav>
        </div>
        <div class="flex items-center space-x-4">
          <a href="https://mail.misile.xyz" class="text-gray-300 hover:text-white transition-colors">Subscribe</a>
          <div class="flex items-center space-x-2 text-gray-400 cursor-pointer" id="crypto">
            <span>Donate</span>
            <span class="bg-gray-900 text-gray-300 px-2 py-1 rounded text-sm">XMR</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="min-h-screen px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-white text-center mb-12">Blog</h1>
      
      <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 mb-8">
        <p class="text-gray-400">Korean version is available <a href="/ko/blog" class="text-blue-400 hover:text-blue-300 transition-colors">here</a></p>
      </div>
      
      <div class="space-y-6">
        <Post title="Thinking AI as children." description="How much data matters to AI?" path={4} lang="en" />
        <Post title="c'est la vie to open-source maintainers" description="Humans can't be perfect, including you and me." path={3} lang='en' />
        <Post title="Linus, I have a different opinion." description="Open-source should be not political." path={2} lang='en'/>
        <Post title="The 'Password Restriction' failed" description="NIST confirmed" path={1} lang='en'/>
      </div>
    </div>
  </main>
</Base>
