---
import Base from "../../../components/base.astro"
import Post from "../../../components/post.astro"
---

<Base>
  <Fragment slot="head">
    <title>Blog</title>
  </Fragment>
  <!-- Navigation Header -->
  <header class="border-b border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-8">
          <a href="/" class="text-xl font-bold text-white">Misile</a>
          <nav class="hidden md:flex space-x-6">
            <a href="/projects" class="text-gray-300 hover:text-white transition-colors">Projects</a>
            <a href="/ko/blog" class="text-white">Blog</a>
            <a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact</a>
          </nav>
        </div>
        <div class="flex items-center space-x-4">
          <a href="https://mail.misile.xyz" class="text-gray-300 hover:text-white transition-colors">Subscribe</a>
          <div class="flex items-center space-x-2 text-gray-400 cursor-pointer" id="crypto">
            <span>Donate</span>
            <span class="bg-gray-900 text-gray-300 px-2 py-1 rounded text-sm">XMR</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="min-h-screen px-4 py-12">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-white text-center mb-12">블로그</h1>
      
      <div class="bg-gray-900 border border-gray-800 rounded-lg p-6 mb-8">
        <p class="text-gray-400">English version is available <a href="/en/blog" class="text-blue-400 hover:text-blue-300 transition-colors">here</a></p>
      </div>
      
      <div class="space-y-6">
        <Post title="오픈 소스 유지보수자들에게, c'est la vie" description="사람은 완벽할 수 없습니다. 저와 당신도 해당됩니다." path={3} lang='ko'/>
        <Post title="리누스, 저는 다른 의견입니다." description="오픈 소스는 정치와 관련되지 않아야 합니다." path={2} lang='ko'/>
        <Post title="'비밀번호 제한'은 실패했다." description="그리고 그것을 미국이 인정했다." path={1} lang='ko'/>
      </div>
    </div>
  </main>
</Base>
