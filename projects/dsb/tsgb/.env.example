# Vast.ai API credentials
VAST_API_KEY=your_vast_api_key_here
VAST_BASE_URL=https://api.vast.ai/v0

# WebDAV / rclone settings for checkpoint storage
RCLONE_WEBDAV_URL=https://your-webdav-server.com/dav
RCLONE_WEBDAV_USER=your_username
RCLONE_WEBDAV_PASS=your_password
RCLONE_REMOTE_NAME=tsgb-remote
RCLONE_MOUNTPOINT=/mnt/tsgb

# Checkpoint directories
CHECKPOINT_DIR=/mnt/tsgb/checkpoints
LOCAL_CHECKPOINT_DIR=./checkpoints

# Vast.ai instance filter defaults
VAST_GPU_NAME=RTX_4090
VAST_MIN_VRAM_GB=24
VAST_MAX_PRICE=2.0

# Default model for training (SmolLM3-3B recommended)
DEFAULT_MODEL_NAME=HuggingFaceTB/SmolLM3-3B

# Training batch size (leave empty to auto-compute from VRAM)
BATCH_SIZE=

# GPU runtime settings
CUDA_VISIBLE_DEVICES=0,1
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
TOKENIZERS_PARALLELISM=true

# Black-box LLM API keys (Stage 2 evaluation)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Logging mode: "dev" for colorized console, "json" for structured JSON logs
LOG_MODE=dev

# Trackio experiment logging (optional)
TRACKIO_ENABLED=true
TRACKIO_PROJECT=tsgb-worker
TRACKIO_SPACE_ID=
