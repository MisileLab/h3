{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Meeting Assistant",
  "version": "0.1.0",
  "identifier": "xyz.misile.meeting-assistant",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Meeting Assistant",
        "width": 1100,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
