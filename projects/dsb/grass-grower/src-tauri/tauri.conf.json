{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "grass-grower",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "exists": true,
        "readDir": true,
        "scope": ["enabled.txt", "repository"]
      },
      "shell": {
        "all": true,
        "open": true,
        "scope": [{
          "name": "run-git-add",
          "cmd": "git",
          "args": ["add", "-A"]
        },
        {
          "name": "run-git-commit",
          "cmd": "git",
          "args": ["commit", "-m", "auto commit"]
        },
        {
          "name": "cd",
          "cmd": "cd",
          "args": [{"validator": ""}]
        },
        {
          "name": "run-git-push",
          "cmd": "git",
          "args": ["push"]
        },
        {
          "name": "run-git-clone",
          "cmd": "git",
          "args": [{"validator": ""}]
        }
      ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "xyz.misilelaboratory.grassgrower",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "grass-grower",
        "width": 1920,
        "height": 1080
      }
    ]
  }
}
