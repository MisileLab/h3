---
import '../styles/global.css';
const { title } = Astro.props;
---

<html lang="ko">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | 내 손 안에 노무사</title>
	</head>
	<body class="bg-gray-50 text-gray-800">
		<header class="bg-white shadow-md">
			<nav class="container mx-auto px-6 py-4 flex justify-between items-center">
				<a href="/" class="text-2xl font-bold text-gray-800">내 손 안에 노무사</a>
				<div>
					<a href="/#features" class="mx-2 text-gray-600 hover:text-gray-800">주요 기능</a>
					<a href="/#pricing" class="mx-2 text-gray-600 hover:text-gray-800">요금제</a>
                    <a href="/dashboard" class="mx-2 text-gray-600 hover:text-gray-800">대시보드</a>
					<a href="/login" class="mx-2 text-gray-600 hover:text-gray-800">로그인</a>
					<a href="/register" class="mx-2 bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">회원가입</a>
				</div>
			</nav>
		</header>

		<main>
			<slot />
		</main>

		<footer class="bg-white mt-12">
			<div class="container mx-auto px-6 py-4 text-center text-gray-600">
				<p>&copy; 2025 내 손 안에 노무사. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>